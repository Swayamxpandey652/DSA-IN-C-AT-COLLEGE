public class LetterCount{
    public static void main(String[] args){
        String text = "Java is amazing and adaptable.";
        text = text.toLowerCase();
        
        char target = 'a';
        int count = 0;
        
        for(int i =0;i<text.length();i++){
            if(text.charAt(i) == target){
                count++;
            }
        }
        System.out.println(count);
    }
}

